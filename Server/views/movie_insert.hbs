<div class="container">
        <form action="/index/insert_postmovie" method="post" enctype="multipart/form-data">
            <div class="mb-3 mt-3">
                <label for="room">Title</label>
                <input type="text" class="form-control" id="title" name="title">
            </div>
            <div class="mb-3">
                <label for="day">Category:</label>
                <select class="form-control" id="category" name="category" required>
                    {{#each option_category}}
                        <option>{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="mb-3">
                <label for="class_name">Image Cover</label>
                <input type="file" class="form-control" id="imageCover" name="imageCover">
            </div>
            <div class="mb-3">
                <label for="teacher_name">Actor:</label>
                <select class="form-control" id="actor" name="actor" required>
                    {{#each option_actor}}
                        <option value="{{_id}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="mb-3">
                <label for="address">Trailer:</label>
                <input type="file" class="form-control" id="trailer" name="trailer">
            </div>
            <div class="mb-3">
                <label for="address">Duration:</label>
                <input type="text" class="form-control" id="duration" name="duration">
            </div>
            <div class="mb-3">
                <label for="address">Release Date:</label>
                <input type="text" class="form-control" id="release_date" name="release_date">
            </div>
            <div class="mb-3">
                <label for="address">Description:</label>
                <input type="text" class="form-control" id="description" name="description">
            </div>
            <div class="mb-3">
                <label for="address">Country:</label>
                <input type="text" class="form-control" id="country" name="country">
            </div>
            <button name="submit" type="submit" class="btn btn-success">Add Movie</button>
        </form>
    </div>

