{{> menu}}

<!-- Ná»™i dung -->
<div class="p-4 .table-responsive">
    <a href='/index/insert_getmovie' class='btn btn-success mb-3'>Add Movie</a>
    <table class="table table-dark text-center">
      <thead>
        <tr>
          <th>Title</th>
          <th>Category</th>
          <th>Ratings Average</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each movies}}
        <tr>
            <td class="align-middle"><img src="http://127.0.0.1:3000/img/movies/{{this.imageCover}}" width="75" height="75" style="object-fit: cover;"></td>
            <td class="align-middle">{{this.title}}</td>
            <td class="align-middle">{{this.ratingsAverage}}</td>
            <td class="align-middle">
              <a href='/index/deletemovie/{{this._id}}' class='btn btn-danger'>Delete</a>
              <a href='/index/detailmovie/{{this._id}}' class='btn btn-primary'>Update</a>
            </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
</div>


